Algoritmo "Enquanto"
Var
  valorDigitado : real
  soma : real
Inicio
  soma := 0
  escreva("Digite um valor para a soma: ")
  leia(valorDigitado)
  
  enquanto valorDigitado <> 0 faca
    soma := soma + valorDigitado
    escreva("Digite um valor para a soma: ")
    leia(valorDigitado)
  fimenquanto
  
  Escreval("Resultado: ", soma)

Fimalgoritmo